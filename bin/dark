#!/usr/bin/env bash

set -euo pipefail

BG="#171717"
FG="#99FF33"
BORDER=green
HIGHLIGHT=magenta

tmux set pane-border-style        "bg=$BG fg=$BORDER"
tmux set pane-active-border-style "bg=$BG fg=$HIGHLIGHT"

PANES="$(tmux list-panes -a -F '#{pane_id}')"

for PANE in $PANES; do
	tmux select-pane -t "$PANE" -P "bg=$BG fg=$FG"
done
